{
  "manifest_version": 3,
  "name": "Grab AI - Website to React",
  "version": "1.0.0",
  "description": "Capture any website section and convert it to a React component with all styles, responsive breakpoints, and assets.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["viewport-converter.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["selector-overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
